@model FlyingClub.WebApp.Models.AddStageCheckViewModel
           
@{
    ViewBag.Title = "Add Stage Check";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h2>Add Stage Check</h2>

<br />
@using (Html.BeginForm())
{
 @Html.ValidationSummary(true)
 @Html.HiddenFor(model => model.PilotId)
 @Html.HiddenFor(model => model.InstructorId)
<fieldset>
<legend></legend>
<br />
<p>
 @Model.PilotName has succesfully passed @Html.DropDownListFor(model => model.StageName, new SelectList(Model.AvailableStages, "Key", "Value")) on @Html.EditorFor(model => model.CheckDate)<br />
</p>
<p>Check instructor: @Model.InstructorName</p>
  <p>
     <input type="submit" value="Submit" />
  </p>
</fieldset>
<div>
    @Html.ActionLink("Back ", "EditPilotCheckouts", new { memberId = @Model.PilotId })
</div>
}


<script>
    $(function () {
        $("#CheckDate").datepicker({ showButtonPanel: true });
    });
</script>