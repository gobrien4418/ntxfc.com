@model IEnumerable<FlyingClub.WebApp.Models.ReservationViewModel>

<h2 class="pageTitle"><img src="@Url.Content("~/Content/themes/base/images/flight_plan.gif")" align="left" alt="Student Reservations" class="sectionIcon" /> Student Reservations</h3>

<table>
    <tr>
        <th>Student</th>
        <th>Aircraft</th>
        <th>StartDate</th>
        <th>EndDate</th>
        <th></th>
    </tr>
@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Member.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Aircraft.RegistrationNumber)
        </td>
        <td>
            @item.StartDate.ToString("M/dd/yyyy HH:mm")
        </td>
        <td>
            @item.EndDate.ToString("M/dd/yyyy HH:mm")
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id }) 
        </td>
    </tr>
}
</table>