@model FlyingClub.WebApp.Models.FlightReviewViewModel
@{
    ViewBag.Title = "Update Flight Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.PilotId)
    @Html.HiddenFor(model => model.InstructorId)
    @Html.HiddenFor(model => model.InstructorName)
<h2>Update Flight Review</h2>
    <fieldset>
      <legend>Flight Review</legend>
      <p>Please update flight review information for @Model.PilotName</p>

    <div class="display-label">
        @Html.LabelFor(model => model.ReviewDate, "Review Date")
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.ReviewDate)
    </div>
        <div class="display-label">Instructor</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.InstructorName)
    </div>
    <div class="display-label">Total time:</div>
    <div class="editor-field">
        @Html.EditorFor(model => model.TotalTime)
    </div>
    <div class="display-label">Retract time:</div>
    <div class="editor-field">
        @Html.EditorFor(model => model.RetractTime)
    </div>
    <div class="display-label">Review Notes:</div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Notes)
    </div>
    </fieldset>
    <div>
    <input type="submit" value="Update" />
    </div>
}

<script>
    $(function () {
        $("#ReviewDate").datepicker({ showButtonPanel: true });
    });
</script>