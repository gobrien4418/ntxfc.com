@model FlyingClub.WebApp.Models.UpdateInstructorViewModel
@{
    ViewBag.Title = "Create Instructor Record";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    Update Instructor Record</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    <table border="0" class="noborder">
        <tr>
            <td>
            <fieldset>
            
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.MemberId)
    <div class="editor-label">
        @Html.LabelFor(model => model.CertificateNumber, "Certificate Number")
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.CertificateNumber)
        @Html.ValidationMessageFor(model => model.CertificateNumber)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.Ratings, "Ratings")
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Ratings)
        @Html.ValidationMessageFor(model => model.Ratings)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.AvailableForCheckoutsAnnuals, "Annual Flight Reviews and Club Checkouts")
    </div>
    <div class="editor-field">
        @Html.CheckBoxFor(model => model.AvailableForCheckoutsAnnuals)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.InstructOnWeekdays, "Instruct on Weekdays")
    </div>
    <div class="editor-field">
        @Html.CheckBoxFor(model => model.InstructOnWeekdays)
    </div>
     <div class="editor-label">
        @Html.LabelFor(model => model.InstructOnWeekdayNights, "Instruct on Weekday Nights")
    </div>
    <div class="editor-field">
        @Html.CheckBoxFor(model => model.InstructOnWeekdayNights)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.InstructOnWeekends, "Instruct on Weekends")
    </div>
    <div class="editor-field">
        @Html.CheckBoxFor(model => model.InstructOnWeekends)
    </div>
    
    @if (User.IsInRole(FlyingClub.Common.UserRoles.Admin.ToString()))
    {
     <div class="editor-label">
        @Html.LabelFor(model => model.DesignatedForStageChecks, "Authorized to do stage checks")
    </div>
    <div class="editor-field">
        @Html.CheckBoxFor(model => model.DesignatedForStageChecks)
    </div>
    }

    <div class="editor-label">
        @Html.LabelFor(model => model.Comments, "Comments")
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Comments)
        @Html.ValidationMessageFor(model => model.Comments)
    </div>
    </fieldset>
            </td>

            <td>

    @if (User.IsInRole(FlyingClub.Common.UserRoles.Admin.ToString()))
    { 
         <fieldset>
         <legend>Aircraft Authorizations</legend>
            <div class="editor-field">
                @Html.CheckBoxListFor(model => model.AuthorizedAircraft, new MultiSelectList(Model.AircraftList, "Id", "RegistrationNumber"))
            </div> 
        </fieldset>
    }           
            </td>
        </tr>
    </table>   
    
    <br />
    <div>
        <input type="submit" value="Save" />
    </div>
}