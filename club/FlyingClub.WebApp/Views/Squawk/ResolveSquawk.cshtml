@model FlyingClub.WebApp.Models.ResolveSquawkViewModel

@{
    ViewBag.Title = "Resolve Squawk";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.PageTitle(PageTitleImage.Squawk, "Squawk", "Resolve")
<p>@Html.MvcSiteMap().SiteMapPath()</p>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Resolve Squawk</legend>

        @Html.HiddenFor(model => model.Id)
        <div class="editor-label">
            @Html.LabelFor(model => model.Subject)
        </div>
        <div class="editor-field">
            @Html.DisplayFor(model => model.Subject)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.DisplayFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ResolutionNotes, "Owner/AP Response")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ResolutionNotes)
            @Html.ValidationMessageFor(model => model.ResolutionNotes)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Status)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Status, Model.StatusValues)
        </div>

        <p>
            <input type="submit" value="Submit" />
        </p>
    </fieldset>
}
