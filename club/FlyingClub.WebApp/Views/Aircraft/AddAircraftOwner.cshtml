@model FlyingClub.WebApp.Models.AddAircraftOwnerViewModel
@{
    ViewBag.Title = "Add Owner";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    Add Aircraft Owner</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.AircraftId)

    <h3>
        Select member from the list to assign as owner of the @Model.RegistrationNumber</h3>
    <div class="editor-label">
        @Html.LabelFor(model => model.OwnerId, "Member Name")
    </div>
    <div class="editor-field">
        @Html.DropDownListFor(model => model.OwnerId, new SelectList(Model.ClubMembers, "OwnerId", "Name", ""))
        @Html.ValidationMessageFor(model => model.OwnerId)
    </div>
    <p>
        <input type="submit" value="Save" />
    </p>
}
