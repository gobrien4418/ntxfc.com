@model IEnumerable<FlyingClub.WebApp.Models.ReservationViewModel>

<table>
    <tr>
        <th>Aircraft</th>
        <th>StartDate</th>
        <th>EndDate</th>
        <th></th>
    </tr>
@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Aircraft.RegistrationNumber)
        </td>
        <td>
            @item.StartDate.ToString("M/dd/yyyy HH:mm")
        </td>
        <td>
            @item.EndDate.ToString("M/dd/yyyy HH:mm")
        </td>
        <td>
            @if (item.CanEdit())
            {
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) @:|
            }
            @Html.ActionLink("Details", "Details", new { id = item.Id }) 
            @if (item.CanDelete())
            {
                @:| @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { OnClick = "return confirm('Are you sure you want to delete?');" })
            }
        </td>
    </tr>
}
</table>
